{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Hosting": "Information",
      "WhatsAppApi": "Trace",
      "BaileysCSharp": "Trace"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff zzz "
    },
    "File": {
      "Path": "logs/whatsapp-dev-{Date}.log",
      "FileSizeLimitBytes": 50485760,
      "RetainedFileCountLimit": 14,
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff zzz "
    }
  },
  "DetailedLogging": {
    "Enabled": true,
    "LogConnections": true,
    "LogMessages": true,
    "LogQRGeneration": true,
    "LogRateLimit": false,
    "LogSessionEvents": true,
    "LogErrorDetails": true
  },
  "RateLimiting": {
    "MaxRequestsPerMinute": 500,
    "MaxRequestsPerHour": 5000,
    "MaxQRRequestsPerMinute": 100,
    "MaxSessionOperationsPerMinute": 2000
  },
  "Kestrel": {
    "UnixSocketPath": "/home/RubyManager/web/whatsapp.rubymanager.app/netcoreapp/app.sock"
  },
  "publish": {
    "Env": "dev"
  },
  "AllowedHosts": "*"
}
